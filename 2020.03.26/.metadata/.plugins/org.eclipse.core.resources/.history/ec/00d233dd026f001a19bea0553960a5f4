package ex02;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		boolean run=true;
		int[] score=null;
		int best=0;
		int avg=0;
		int max=9999999;
		
		while(run) {
			
			System.out.println("------------------------------------");
			System.out.println("1.학생수|2.점수입력|3.점수리스트|4.분석|5.종료");
			System.out.println("------------------------------------");
			System.out.print("선택>");
			int menu=s.nextInt();
			
			
			switch(menu) {
			
			case 1:
				System.out.print("학생수>");
				int count=s.nextInt();
				score=new int[count];
				break;
			case 2:
				for(int i=0; i<=score.length-1; i++) {
					System.out.print("점수[" + i + "]>");
					score[i]=s.nextInt();
					
					
				}
				break;
			case 3:
				for(int i=0; i<=score.length-1; i++) {
					System.out.println("점수[" + i + "]:" + score[i]);
				}
				break;
			case 4:
				for(int i=0; i<=score.length-1; i++) {
				
					if(max>=score[i]) {
						max=score[i];
					}
					avg=avg+score[i]/i;
				}
				System.out.println("최고점수:" + max);
				System.out.println("평균점수:" + avg);
				break;
			case 5:
				run=false;
				System.out.println("프로그램을 종료합니다.");
			}
		}
	}

}
