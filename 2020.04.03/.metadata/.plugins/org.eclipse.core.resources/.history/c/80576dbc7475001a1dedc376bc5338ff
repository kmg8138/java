package ex01;

import java.sql.PreparedStatement;
import java.util.ArrayList;
import java.util.Scanner;

public class Sample {

	public static void main(String[] args)throws Exception {
		Scanner s=new Scanner(System.in);
		StudentDAO dao=new StudentDAO();
		StudentVO vo=new StudentVO();
		PreparedStatement ps=null;
		boolean run=true;
		
		while(run) {
			System.out.println("-----------------------------------------------");
			System.out.println("1.학생입력|2.학생조회|3.학생목록|4.학생수정|5.학생삭제|6.종료");
			System.out.println("-----------------------------------------------");
			System.out.print("메뉴선택>");
			int menu=s.nextInt();
			
			switch(menu) {
			
			default:
				break;
			case 1:
				System.out.println("------------------");
				System.out.println("학생입력");
				System.out.println("------------------");
			
				System.out.print("학번(두자리)>");
				String sno=(s.next());
				
				vo=dao.read(sno);
				if(vo.getSno()==null) {
				vo.setSno(sno);	
				System.out.print("이름>");
				vo.setSname(s.next());
				System.out.print("전화번호>");
				vo.setTel(s.next());
				dao.insert(vo);
				}else {
					System.out.println("이미 존재하는 학번입니다.");
				}
				System.out.println();
				break;
			case 2:
				System.out.println("------------------");
				System.out.println("학생조회");
				System.out.println("------------------");		
				System.out.print("학번(두자리)>");
				sno=s.next();
				vo=dao.read(sno);
				if(vo.getSname()==null) {
					System.out.println("학생이 존재하지 않습니다.");
				}else {
					System.out.println("성명:"+vo.getSname());
					System.out.println("전화번호:"+vo.getTel());
				}
				
				System.out.println();
				break;
			case 3:
				System.out.println("------------------");
				System.out.println("학생목록");
				System.out.println("------------------");
				System.out.println("학번\t이름\t전화번호");
				ArrayList<StudentVO> array=dao.list();
				for(int i=0; i<array.size(); i++) {
					vo=array.get(i);
					System.out.print(vo.getSno()+"\t");
					System.out.print(vo.getSname()+"\t");
					System.out.print(vo.getTel());
				}
				
				break;
			case 4:
				break;
			case 5:
				System.out.println("------------------");
				System.out.println("학생삭제");
				System.out.println("------------------");
				System.out.print("학번(두자리)>");
				sno=s.next();
				vo=dao.read(sno);
				if(vo.getSno()==null) {
					System.out.println("삭제할 학생이 존재하지 않습니다.");
				}else {
					dao.delete(sno);
					System.out.println("삭제완료");
				}
				System.out.println();
				break;
			case 6:
				run=false;
				System.out.println("프로그램 종료");
				
			}
		}
	}

}
