package ex02;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		boolean run=true;
		Scanner s=new Scanner(System.in);
		
		
		while(run) {
			int[] num=null;
			int count=0;
			
			System.out.println("-----------------------------------");
			System.out.println("1.배열 생성|2.데이터 입력|3.데이터 복구|4.종료");
			System.out.println("-----------------------------------");
			System.out.print("선택>");
			int menu=s.nextInt();
			
			
			switch(menu) {
			case 1:
				
				System.out.print("배열크기>");
				count=s.nextInt();
				num=new int[count];
				
				break;
			case 2:
				int sum=0;
				int avg=0;
				
				for(int i=1; i<count; i++) {
					
					System.out.print("숫자["+i+"]>");
					num[i]=s.nextInt();
					sum=sum+num[i];
					avg=sum/
				}
				System.out.println("총점:" + sum);
				System.out.println("평균:" + avg);
				
				break;
			case 3:
				break;
			case 4:
				break;
			}
			
		}

	}

}
